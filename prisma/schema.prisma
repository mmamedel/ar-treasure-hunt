generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model GameSession {
  id                   Int        @id @default(autoincrement())
  playerName           String     @unique
  start                DateTime
  end                  DateTime?
  durationMs           Int?
  treasures            Treasure[]
  currentTreasureIndex Int
  hasReceivedPrize     Boolean    @default(false)
  hasFinished          Boolean    @default(false)
}

model Treasure {
  id             Int         @id @default(autoincrement())
  gameSessionId  Int
  gameSession    GameSession @relation(fields: [gameSessionId], references: [id], onDelete: Cascade)
  treasureNumber Int
  start          DateTime    @default(now())
  end            DateTime?
  found          Boolean     @default(false)
}
